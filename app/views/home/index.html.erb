<div class="container">
  <%= render 'form_filter' %>

  <hr />

  <% if @user.present? %>
    <div class="row">
      <div class="col-sm-3">
        <img class="img-rounded img-responsive" src="<%= @user.avatar_url %>" />

        <h4>
          <div><%= @user.name %></div>
          <small><%= @user.username %></small>
        </h4>

        <hr />

        <p class="company">
          <%= fa_icon :users %> <%= @user.company %>
        </p>
        <p class="country">
          <%= fa_icon :'map-marker' %> <%= @user.location %>
        </p>
        <p class="email">
          <%= fa_icon :'envelope-o' %>
          <%= @user.link_to_email %>
        </p>
        <p class="created">
          <%= fa_icon :'clock-o' %>
          <%= t '.joined_at' %>: <%= @user.created_date %>
        </p>
      </div>

      <div class="col-sm-9">
        <div id="repositories">
          <% if @repositories.any? %>
          <% @repositories.each do |repository| %>
            <div class="repository">
              <h4>
                <%= repository.name %>
                <small>@<%= repository.owner_login %></small>
                <small class="pull-right">
                  <%= repository.language %> <%= fa_icon :star %> <%= repository.stargazers_count %>
                </small>
              </h4>
              <p><%= repository.description %></p>
              <%= t '.updated_at' %>: <%= repository.updated_date %>
              <hr />
            </div>
          <% end %>
          <% end %>
        </div>
      </div>
    </div>
  <% else %>
    <div class="alert alert-info"><%= t '.user_not_found' %></div>
  <% end %>
</div>
