<div class="container">
  <div class="row form-group">
    <div class="col-sm-12">
      <div class="input-group">
        <input type="text" class="form-control input-lg" placeholder="Usuário do github" name="search">
        <div class="input-group-btn">
          <button class="btn btn-lg btn-default" type="submit">
            <%= fa_icon :search %>
          </button>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-4">
      <%= select_tag :type, options_for_select(GithubType.to_a), { class: 'form-control' } %>
    </div>

    <div class="col-sm-4">
      <%= select_tag :sort, options_for_select(GithubSort.to_a), { class: 'form-control' } %>
    </div>

    <div class="col-sm-4">
      <%= select_tag :direction, options_for_select(GithubDirection.to_a), { class: 'form-control' } %>
    </div>
  </div>

  <hr />
  <% if @repos.success? %>
    <div class="row">
      <div class="col-sm-3">
        <img class="img-rounded img-responsive" src="<%= @user['avatar_url'] %>" />

        <h4>
          <div><%= @user['name'] %></div>
          <small>@<%= @user['login'] %></small>
        </h4>

        <hr />

        <p class="company">
          <%= fa_icon :users %> <%= @user['company'] %>
        </p>
        <p class="country">
          <%= fa_icon :'map-marker' %> <%= @user['location'] %>
        </p>
        <p class="email">
          <%= fa_icon :'envelope-o' %>
          <%= link_to @user['email'], "mailto:#{@user['email']}" %>
        </p>
        <p class="created">
          <%= fa_icon :'clock-o' %>
          Joined: <%= @user['created_at'] %>
        </p>
      </div>

      <div class="col-sm-9">
        <div id="repositories">
          <% @repos.each do |repo| %>
            <div class="repository">
              <h4>
                <%= repo['name'] %>
                <small>@<%= repo['owner']['login'] %></small>
                <small class="pull-right">
                  <%= repo['language'] %> <%= fa_icon :star %> <%= repo['stargazers_count'] %>
                </small>
              </h4>
              <p><%= repo['description'] %></p>
              Updated: <%= repo['updated_at'] %>
              <hr />
            </div>
          <% end %>
        </div>
      </div>
    </div>
  <% else %>
  <div class="alert alert-info">
    Usuário não encontrado
  </div>
  <% end %>
</div>
